{{# partial "titulo"}}
    <title>Patitas!</title>
{{/partial}}


{{# partial "contenido"}}
<div style="background-color: white;">
  <img src="/banner.jpg" class=" mx-auto d-block banner">
</div>
<h1 class="text-center mt-4">Patitas!</h1>
