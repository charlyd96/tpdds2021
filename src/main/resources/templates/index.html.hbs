    <div class="col"></div>
{{#each mascotasPerdidas }}
    <div class="col">
        <div class="card h-100">
            <a href="mascotas-encontradas/{{this.id}}"><img width="300" height="300" src="{{this.primeraFoto}}" class="card-img-top"></a>
            <div class="card-body">
                <p class="card-text"> {{this.mascota.descripcionFisica}}</p>
